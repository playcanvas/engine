{
    "compilerOptions": {
        "checkJs": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "ES2015",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "moduleResolution" : "node"
    },
    "include": ["src", "scripts"],
    "exclude": ["node_modules", "src/lib"]
}
