{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports" : true,
        "checkJs": true,
        "esModuleInterop" : true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "noImplicitAny": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "target": "ESNext",
    },
    "include": ["src", "scripts", "iframe", "templates", "utils", "rollup.config.js"],
    "exclude": ["node_modules", "src/lib"]
}
