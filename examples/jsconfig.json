{
    "compilerOptions": {
        "checkJs": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "esnext",
        "target": "es2020",
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "moduleResolution" : "node"
    },
    "include": ["src", "scripts", "iframe", "examples.config.mjs"],
    "exclude": ["node_modules", "src/lib"]
}
