{
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/typescript"
    ],
    "recurseDepth": 10,
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.(js|ts)(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "docs",
        "encoding": "utf8",
        "recurse": true,
        "template": "./node_modules/@playcanvas/jsdoc-template"
    }
}